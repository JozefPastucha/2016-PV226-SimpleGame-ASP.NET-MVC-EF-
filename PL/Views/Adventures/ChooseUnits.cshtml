@model PL.Models.AdventuresChooseUnitsModel
@{
    ViewBag.Title = "ChooseUnits";
}

<h2>ChooseUnits</h2>

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)
    
        for (int i = 0; i < Model.UnitsCount.Count; ++i)
        {
            <div>
                @Html.DisplayFor(model => model.UnitsTypes[i])
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UnitsCount[i])
                @Html.ValidationMessageFor(model => model.UnitsCount[i])
            </div>
        }
        <p>
            <input type="submit" value="Send" />
        </p>
}

